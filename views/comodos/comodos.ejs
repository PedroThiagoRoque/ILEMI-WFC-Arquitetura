      <script>
          document.querySelectorAll('.menu-button').forEach(button => {
              button.addEventListener('click', () => {
                  document.querySelectorAll('.menu-button').forEach(btn => {
                      btn.classList.remove('menu-button-active');
                  });
                  if (button.id !== 'selecionar') {
                      button.classList.add('menu-button-active');
                  }
  
                  // Mostrar toast
                  showToast(button.id);
              });
          });
  
          document.getElementById('selecionar').addEventListener('click', () => {
              document.querySelectorAll('.menu-button').forEach(btn => {
                  btn.classList.remove('menu-button-active');
              });

          });
  
          function showToast(buttonId) {
              let toastMessage = '';
              let titleToast ='';
              switch (buttonId) {
                  case 'selecionar':
                      toastMessage = 'Modo Selecionar: Use este modo para selecionar e modificar elementos existentes.';
                      return;
                  case 'criaPorta':
                      toastMessage = 'Criar Porta: Clique em um local para adicionar uma porta.';
                      titleToast = 'Porta';
                      break;
                  case 'criaJanela':
                      toastMessage = 'Criar Janela: Clique em um local para adicionar uma janela.';
                      titleToast = 'Janela';
                      break;
                  case 'criaParede':
                      toastMessage = 'Criar Parede: Clique em um local para adicionar uma parede.';
                      titleToast = 'Parede';
                      break;
                  case 'criaCanto':
                      toastMessage = 'Criar Canto: Clique em um local para adicionar um canto.';
                      titleToast = 'Canto';
                      break;
                  case 'criaPiso':
                      toastMessage = 'Criar Piso: Clique em um local para adicionar um piso.';
                      titleToast = 'Piso';
                      break;
                  default:
                      toastMessage = 'Viva a Habitação Popular de qualidade!';
                      titleToast = 'ILÊMI';
              }
              
              // Obter o horário atual
            const now = new Date();
            const hours = now.getHours().toString().padStart(2, '0');
            const minutes = now.getMinutes().toString().padStart(2, '0');

              // Criação do elemento toast
              const toast = document.createElement('div');
              toast.className = 'toast align-items-center text-bg-primary border-0';
              toast.setAttribute('role', 'alert');
              toast.setAttribute('aria-live', 'assertive');
              toast.setAttribute('aria-atomic', 'true');
              toast.setAttribute('data-bs-autohide', 'true');
              toast.setAttribute('data-bs-delay', '5000');  // Define o tempo de exibição do toast (em milissegundos)
              toast.innerHTML = `
                <div class="toast-header">
                  <strong class="mr-auto"> ${titleToast}</strong>
                  <small>${hours}:${minutes}</small>
                  <button type="button" class="ml-2 mb-1 close" data-bs-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="toast-body">
                  ${toastMessage}
                </div>
              `;
  
              // Adicionar o toast ao contêiner
              document.querySelector('.toast-container').appendChild(toast);
  
              // Inicializar e mostrar o toast
              const bsToast = new bootstrap.Toast(toast);
              bsToast.show();
  
              // Remover o toast após escondê-lo
              toast.addEventListener('hidden.bs.toast', () => {
                  toast.remove();
              });
          }
      </script>

